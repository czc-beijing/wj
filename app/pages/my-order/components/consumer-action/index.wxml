<wxs src="/common/wxs/action-label.wxs" module="actionLabel"></wxs>

<view class="container">
    <view class="chat" >
        <i-button bgColor="#fff" icon="telephone" data-tel="13429208394" bind:tap="handleChat">
            联系老板
        </i-button>
    </view>

    <view class="chat">
        <text>{{order.address_snap.userName}}:    </text>
        <text>{{order.address_snap.detailInfo}}</text>
    </view>
    <view class="business-action">
        <i-button bind:tap="handleNavToOrderDetail"
                  wx:if="{{ order.status === orderStatus.UNAPPROVED || order.status === orderStatus.UNPAID }}"
                  special>取消订单
        </i-button>
        <i-button wx:if="{{ order.status === orderStatus.UNCONFIRMED }}"
                  special
                  bind:tap="handleNavToRefund">申请退款
        </i-button>
        <view class="basic-button">
            <i-button wx:if="{{ order.status === orderStatus.UNCONFIRMED || order.status === orderStatus.UNPAID }}"
                      shape="semicircle"
                      size="mini"
                      bind:tap="handleNavToOrderDetail">
                {{actionLabel.convert(order.status)}}
            </i-button>
            <i-button wx:else special bind:tap="handleNavToOrderDetail">
                查看详情
            </i-button>
        </view>
    </view>

</view>
